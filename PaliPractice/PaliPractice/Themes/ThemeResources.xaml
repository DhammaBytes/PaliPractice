<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <ResourceDictionary.ThemeDictionaries>
        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <!-- Background and Surface Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F7EEE5"/>
            <SolidColorBrush x:Key="BackgroundVariantBrush" Color="#EED7C6"/>
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="#E9E9E9"/>

            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#FFF5EB"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#672000"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#461200"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#7A5040"/>
            <SolidColorBrush x:Key="OnSurfaceDisabledBrush" Color="#C4A090"/>

            <!-- System Accent Colors -->
            <Color x:Key="SystemAccentColor">#C76034</Color>
            <Color x:Key="SystemAccentColorLight1">#D87045</Color>
            <Color x:Key="SystemAccentColorLight2">#E88060</Color>
            <Color x:Key="SystemAccentColorDark1">#B05028</Color>
            <Color x:Key="SystemAccentColorDark2">#904020</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="AccentSubtleBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.08"/>
            <SolidColorBrush x:Key="AccentSubtleHoverBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.12"/>

            <!-- Button Colors -->
            <SolidColorBrush x:Key="NavigationButtonBrush" Color="#F8F0E8"/>
            <SolidColorBrush x:Key="NavigationButtonOutlineBrush" Color="#F0DED1"/>

            <SolidColorBrush x:Key="NavigationButtonVariantBrush" Color="#F5D1B0"/>
            <SolidColorBrush x:Key="NavigationButtonVariantOutlineBrush" Color="#672000" Opacity="0.07"/>

            <SolidColorBrush x:Key="HardButtonBrush" Color="#EA9B81"/>
            <SolidColorBrush x:Key="HardButtonOutlineBrush" Color="#672000" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnHardButtonBrush" Color="#672000"/>

            <SolidColorBrush x:Key="EasyButtonBrush" Color="#98C78C"/>
            <SolidColorBrush x:Key="EasyButtonOutlineBrush" Color="#293F1C" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnEasyButtonBrush" Color="#293F1C"/>

            <!-- Shadow Collections -->
            <utu:ShadowCollection x:Key="CardShadow">
                <utu:Shadow BlurRadius="20" OffsetY="10" Opacity="1" Color="#F0DED1"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="StartNavigationButtonShadow">
                <utu:Shadow BlurRadius="16" OffsetY="8" Opacity="0.6" Color="#F0DED1"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="StartNavigationButtonVariantShadow">
                <utu:Shadow BlurRadius="20" OffsetY="10" Opacity="1" Color="#F0DED1"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="AppBarNavigationButtonShadow">
                <utu:Shadow BlurRadius="12" OffsetY="6" Opacity="0.6" Color="#F0DED1"/>
            </utu:ShadowCollection>

        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <!-- Background and Surface Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#2D1C14"/>
            <SolidColorBrush x:Key="BackgroundVariantBrush" Color="#4A3525"/>
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="#5A5A5A"/>

            <SolidColorBrush x:Key="SurfaceBrush" Color="#3D2518"/>
            <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#4A3025"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#FFD4B8"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#FFE8D8"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#D4B8A8"/>
            <SolidColorBrush x:Key="OnSurfaceDisabledBrush" Color="#6A5A50"/>

            <!-- System Accent Colors -->
            <Color x:Key="SystemAccentColor">#FFB080</Color>
            <Color x:Key="SystemAccentColorLight1">#FFC090</Color>
            <Color x:Key="SystemAccentColorLight2">#FFD0A0</Color>
            <Color x:Key="SystemAccentColorDark1">#E0A070</Color>
            <Color x:Key="SystemAccentColorDark2">#C09060</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="AccentSubtleBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.08"/>
            <SolidColorBrush x:Key="AccentSubtleHoverBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.12"/>

            <!-- Button Colors -->
            <SolidColorBrush x:Key="NavigationButtonBrush" Color="#3D2E26"/>
            <SolidColorBrush x:Key="NavigationButtonOutlineBrush" Color="#5A4538"/>

            <SolidColorBrush x:Key="NavigationButtonVariantBrush" Color="#5C4838"/>
            <SolidColorBrush x:Key="NavigationButtonVariantOutlineBrush" Color="#FFB896" Opacity="0.07"/>

            <SolidColorBrush x:Key="HardButtonBrush" Color="#8A4030"/>
            <SolidColorBrush x:Key="HardButtonOutlineBrush" Color="#FFB896" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnHardButtonBrush" Color="#FFB896"/>

            <SolidColorBrush x:Key="EasyButtonBrush" Color="#3A5A30"/>
            <SolidColorBrush x:Key="EasyButtonOutlineBrush" Color="#A8D898" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnEasyButtonBrush" Color="#A8D898"/>

            <!-- Shadow Collections -->
            <utu:ShadowCollection x:Key="CardShadow">
                <utu:Shadow BlurRadius="20" OffsetY="10" Opacity="1" Color="#1A0E08"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="StartNavigationButtonShadow">
                <utu:Shadow BlurRadius="16" OffsetY="8" Opacity="0.6" Color="#1A0E08"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="StartNavigationButtonVariantShadow">
                <utu:Shadow BlurRadius="20" OffsetY="10" Opacity="1" Color="#1A0E08"/>
            </utu:ShadowCollection>
            <utu:ShadowCollection x:Key="AppBarNavigationButtonShadow">
                <utu:Shadow BlurRadius="12" OffsetY="6" Opacity="0.6" Color="#1A0E08"/>
            </utu:ShadowCollection>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
