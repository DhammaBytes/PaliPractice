<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI">

    <ResourceDictionary.ThemeDictionaries>
        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <!-- Background and Surface Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F7EEE5"/>
            <SolidColorBrush x:Key="BackgroundVariantBrush" Color="#EED7C6"/>
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="#E9E9E9"/>

            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#672000"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#461200"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#7A5040"/>
            <SolidColorBrush x:Key="OnSurfaceSecondaryBrush" Color="#666666"/>

            <!-- System Accent Colors -->
            <Color x:Key="SystemAccentColor">#C76034</Color>
            <Color x:Key="SystemAccentColorLight1">#D87045</Color>
            <Color x:Key="SystemAccentColorLight2">#E88060</Color>
            <Color x:Key="SystemAccentColorDark1">#B05028</Color>
            <Color x:Key="SystemAccentColorDark2">#904020</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="AccentSubtleBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.08"/>
            <SolidColorBrush x:Key="AccentSubtleHoverBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.12"/>

            <SolidColorBrush x:Key="AccentEndingBrush" Color="#1A7ECB"/>
            <SolidColorBrush x:Key="AccentBlueBrush" Color="#1A7ECB"/>

            <!-- Link Colors -->
            <SolidColorBrush x:Key="LinkBrush" Color="{StaticResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="LinkHoverBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="LinkPressedBrush" Color="{StaticResource SystemAccentColorDark2}"/>

            <SolidColorBrush x:Key="AccentRedBrush" Color="#E83D2D"/>
            <SolidColorBrush x:Key="AccentOrangeBrush" Color="#FC9F5A"/>
            <SolidColorBrush x:Key="AccentGreenBrush" Color="#78B868"/>

            <!-- Calendar Intensity (0=empty uses BackgroundBrush, 1-2 progress toward 3=AccentBrush) -->
            <SolidColorBrush x:Key="CalendarIntensity1Brush" Color="#F0C4A0"/>
            <SolidColorBrush x:Key="CalendarIntensity2Brush" Color="#DF9366"/>

            <!-- Button Colors -->
            <SolidColorBrush x:Key="NavigationButtonBrush" Color="#F8F0E8"/>
            <SolidColorBrush x:Key="NavigationButtonOutlineBrush" Color="#F0DED1"/>

            <SolidColorBrush x:Key="NavigationButtonVariantBrush" Color="#F5D1B0"/>
            <SolidColorBrush x:Key="NavigationButtonVariantOutlineBrush" Color="#672000" Opacity="0.07"/>

            <SolidColorBrush x:Key="HardButtonBrush" Color="#EA9B81"/>
            <SolidColorBrush x:Key="HardButtonOutlineBrush" Color="#672000" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnHardButtonBrush" Color="#672000"/>

            <SolidColorBrush x:Key="EasyButtonBrush" Color="#98C78C"/>
            <SolidColorBrush x:Key="EasyButtonOutlineBrush" Color="#293F1C" Opacity="0.1"/>
            <SolidColorBrush x:Key="OnEasyButtonBrush" Color="#293F1C"/>

            <!-- Button Overlay (hover/pressed states) - matches OnSurfaceVariantBrush for consistency -->
            <SolidColorBrush x:Key="ButtonOverlayBrush" Color="#7A5040"/>

            <!-- Badge Colors -->
            <SolidColorBrush x:Key="BadgePinkBrush" Color="#FFDBCF"/>
            <SolidColorBrush x:Key="BadgeGreenBrush" Color="#E0EDCF"/>
            <SolidColorBrush x:Key="BadgeBlueBrush" Color="#CFE5F5"/>
            <SolidColorBrush x:Key="BadgeYellowBrush" Color="#FFE7C9"/>
            <SolidColorBrush x:Key="BadgePurpleBrush" Color="#E3D3EA"/>
            <SolidColorBrush x:Key="BadgeGrayBrush" Color="#E5E1DC"/>

            <!-- Shadow Collections -->
            <utu:ShadowCollection x:Key="CardShadow">
                <utu:Shadow BlurRadius="4" OffsetY="2" Opacity="0.4" Color="#F0DED1"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="StartPrimaryButtonShadow">
                <utu:Shadow BlurRadius="6" OffsetY="3" Opacity="0.6" Color="#F0DED1"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="StartSecondaryButtonShadow">
                <utu:Shadow BlurRadius="4" OffsetY="2" Opacity="0.4" Color="#F0DED1"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="NavigationButtonShadow">
                <utu:Shadow BlurRadius="4" OffsetY="4" Opacity="0.2" Color="#F0DED1"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="ButtonShadow">
                <utu:Shadow BlurRadius="6" OffsetY="3" Opacity="0.6" Color="#F0DED1"/>
            </utu:ShadowCollection>

        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <!-- Background and Surface Colors -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#2D1C14"/>
            <SolidColorBrush x:Key="BackgroundVariantBrush" Color="#4A3524"/>
            <SolidColorBrush x:Key="NeutralGrayBrush" Color="#686058"/>

            <SolidColorBrush x:Key="SurfaceBrush" Color="#402A20"/>

            <!-- Text Colors -->
            <SolidColorBrush x:Key="OnBackgroundBrush" Color="#FFD4B9"/>
            <SolidColorBrush x:Key="OnSurfaceBrush" Color="#FFE8D8"/>
            <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="#FFE8D8" Opacity="0.7"/>
            <SolidColorBrush x:Key="OnSurfaceSecondaryBrush" Color="#9A9090"/>

            <!-- System Accent Colors -->
            <Color x:Key="SystemAccentColor">#FFB080</Color>
            <Color x:Key="SystemAccentColorLight1">#FFC090</Color>
            <Color x:Key="SystemAccentColorLight2">#FFD0A0</Color>
            <Color x:Key="SystemAccentColorDark1">#E0A070</Color>
            <Color x:Key="SystemAccentColorDark2">#C09060</Color>

            <!-- Accent Brushes -->
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="AccentSubtleBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.08"/>
            <SolidColorBrush x:Key="AccentSubtleHoverBrush" Color="{StaticResource SystemAccentColor}" Opacity="0.12"/>

            <SolidColorBrush x:Key="AccentEndingBrush" Color="#6CAFE0"/>
            <SolidColorBrush x:Key="AccentBlueBrush" Color="#2B6CA4"/>

            <!-- Link Colors -->
            <SolidColorBrush x:Key="LinkBrush" Color="{StaticResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="LinkHoverBrush" Color="{StaticResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="LinkPressedBrush" Color="{StaticResource SystemAccentColorDark1}"/>

            <SolidColorBrush x:Key="AccentRedBrush" Color="#C8302C"/>
            <SolidColorBrush x:Key="AccentOrangeBrush" Color="#C17023"/>
            <SolidColorBrush x:Key="AccentGreenBrush" Color="#528735"/>

            <!-- Calendar Intensity (0=empty uses BackgroundBrush, 1-2 progress toward 3=AccentBrush) -->
            <SolidColorBrush x:Key="CalendarIntensity1Brush" Color="#5F3615"/>
            <SolidColorBrush x:Key="CalendarIntensity2Brush" Color="#914F17"/>

            <!-- Button Colors -->
            <SolidColorBrush x:Key="NavigationButtonBrush" Color="#402A20"/>
            <SolidColorBrush x:Key="NavigationButtonOutlineBrush" Color="#55382A"/>

            <SolidColorBrush x:Key="NavigationButtonVariantBrush" Color="#634131"/>
            <SolidColorBrush x:Key="NavigationButtonVariantOutlineBrush" Color="#784C38"/>

            <SolidColorBrush x:Key="HardButtonBrush" Color="#894031"/>
            <SolidColorBrush x:Key="HardButtonOutlineBrush" Color="#944C3A"/>
            <SolidColorBrush x:Key="OnHardButtonBrush" Color="#FFC3AA"/>

            <SolidColorBrush x:Key="EasyButtonBrush" Color="#3A5B30"/>
            <SolidColorBrush x:Key="EasyButtonOutlineBrush" Color="#45663B"/>
            <SolidColorBrush x:Key="OnEasyButtonBrush" Color="#A7D897"/>

            <!-- Button Overlay (hover/pressed states) - warm light for subtle interaction feedback -->
            <SolidColorBrush x:Key="ButtonOverlayBrush" Color="#FFE0C0"/>

            <!-- Badge Colors -->
            <SolidColorBrush x:Key="BadgePinkBrush" Color="#7E3939"/>
            <SolidColorBrush x:Key="BadgeGreenBrush" Color="#415239"/>
            <SolidColorBrush x:Key="BadgeBlueBrush" Color="#3A4C5B"/>
            <SolidColorBrush x:Key="BadgeYellowBrush" Color="#704730"/>
            <SolidColorBrush x:Key="BadgePurpleBrush" Color="#624561"/>
            <SolidColorBrush x:Key="BadgeGrayBrush" Color="#5E534D"/>

            <!-- Shadow Collections -->
            <utu:ShadowCollection x:Key="CardShadow">
                <utu:Shadow BlurRadius="4" OffsetY="2" Opacity="0.5" Color="#1A0E08"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="StartPrimaryButtonShadow">
                <utu:Shadow BlurRadius="6" OffsetY="3" Opacity="0.7" Color="#1A0E08"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="StartSecondaryButtonShadow">
                <utu:Shadow BlurRadius="4" OffsetY="2" Opacity="0.5" Color="#1A0E08"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="NavigationButtonShadow">
                <utu:Shadow BlurRadius="4" OffsetY="4" Opacity="0.3" Color="#1A0E08"/>
            </utu:ShadowCollection>

            <utu:ShadowCollection x:Key="ButtonShadow">
                <utu:Shadow BlurRadius="6" OffsetY="3" Opacity="0.7" Color="#1A0E08"/>
            </utu:ShadowCollection>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
